#!/usr/bin/env node

/* jslint node: true */
'use strict';

var fs = require('fs');

var tlsOptions = {
  rejectUnauthorized: true,
  key: fs.readFileSync('./client-key.pem'),
  cert: fs.readFileSync('./client-cert.pem'),
  ca: [ fs.readFileSync('./ca.pem') ]
};

//var nats = require ('nats').connect();
var nats = require ('../lib/nats.js').connect({tls: true});
//var nats = require ('../lib/nats.js').connect({tls: tlsOptions, name: 'node-sub'});
//var nats = require ('../lib/nats.js').connect();

nats.on('error', function(e) {
  console.log('Error [' + nats.options.url + ']: ' + e);
  process.exit();
});

nats.on('close', function() {
  console.log('CLOSED');
  process.exit();
});

var subject = process.argv[2];

if (!subject) {
  console.log('Usage: node-sub <subject>');
  process.exit();
}

console.log('Listening on [' + subject + ']');

nats.subscribe(subject, function(msg) {
  console.log('Received "' + msg + '"');
});
